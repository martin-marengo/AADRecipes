<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

    </style>

    <style name="Theme.Recipes.Splash" parent="Theme.Recipes">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="HeadlineSmallCustom" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/HeadlineSmallCustomSize</item>
    </style>

    <style name="CardViewRandomRecipe">
        <item name="cardBackgroundColor">?attr/colorSecondary</item>
        <item name="cardCornerRadius">@dimen/home_card_corner_radius</item>
        <item name="cardElevation">@dimen/home_card_elevation</item>
    </style>
</resources>
