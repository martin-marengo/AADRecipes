<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@+id/homeFragment">

    <fragment
        android:id="@id/homeFragment"
        android:name="com.mmarengo.android.recipes.ui.home.HomeFragment"
        android:label="@string/home_title"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment"
            app:enterAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.mmarengo.android.recipes.ui.categories.CategoriesFragment"
        android:label="@string/recipes_categories_title"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.mmarengo.android.recipes.ui.detail.RecipeDetailFragment"
        android:label="@string/detail_title"
        tools:layout="@layout/fragment_recipe_detail" >
        <argument
            android:name="recipeId"
            app:argType="long" />
        <argument
            android:name="recipeDetail"
            app:argType="com.mmarengo.android.recipes.model.RecipeDetail"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

</navigation>
